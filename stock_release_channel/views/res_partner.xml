<odoo>

    <record model="ir.ui.view" id="res_partner_form_view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales_purchases']/group" position="inside">
                <group
                    name="container_row_stock"
                    groups="stock.group_stock_user"
                    priority="6"
                >
                    <group string="Release Channels" name="release_channel" colspan="2">
                        <field
                            name="stock_release_channel_ids"
                            widget="many2many_tags"
                        />
                        <label
                            name="preferred_release_channel_ids"
                            for="preferred_release_channel_ids"
                            colspan="2"
                        />
                        <field
                            name="preferred_release_channel_ids"
                            nolabel="1"
                            colspan="2"
                        >
                          <tree editable="top">
                            <field name="partner_id" invisible="1" force_save="1" />
                            <field
                                    name="release_channel_id"
                                    options="{'no_create': True}"
                                />
                            <field name="date" />
                          </tree>
                        </field>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
