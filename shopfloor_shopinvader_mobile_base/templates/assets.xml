<odoo>
    <template
        id="shopfloor_app_assets"
        inherit_id="shopfloor_mobile_base.shopfloor_app_assets"
    >
        <t id="new_scenario_hook" position="after">
            <t t-set="mod_name" t-value="'shopfloor_shopinvader_mobile_base'" />
            <script
                id="script_page_shop_products"
                t-attf-src="/#{mod_name}/static/wms/src/products.js?v=#{get_version(mod_name)}"
                type="module"
            />
            <script
                id="script_page_shop_cart"
                t-attf-src="/#{mod_name}/static/wms/src/cart.js?v=#{get_version(mod_name)}"
                type="module"
            />
            <script
                id="script_page_shop_orders"
                t-attf-src="/#{mod_name}/static/wms/src/orders.js?v=#{get_version(mod_name)}"
                type="module"
            />
            <script
                id="script_component_cart_list"
                t-attf-src="/#{mod_name}/static/wms/src/cart_list.js?v=#{app_info['version']}"
                type="module"
            />
            <script
                id="script_component_cart_utils"
                t-attf-src="/#{mod_name}/static/wms/src/utils_cart.js?v=#{app_info['version']}"
                type="module"
            />
            <link
                id="link_css_shopinvader"
                t-attf-href="/#{mod_name}/static/wms/src/css/main.css?v=#{mod_version}"
                rel="stylesheet"
            />

        </t>
    </template>
</odoo>
